<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_1_left_right"
        android:layout_marginRight="@dimen/margin_size_1_left_right"
        android:layout_marginTop="@dimen/margin_size_top_1"
        app:cardCornerRadius="@dimen/card_view_radius_recommend"
        app:cardElevation="@dimen/card_view_elevation_recommend">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_streamer"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_text_margin_recommend"
                android:layout_marginRight="@dimen/item_text_margin_recommend"
                android:layout_marginTop="@dimen/item_text_margin_recommend"
                android:textColor="@color/item_title_text_recommend"
                android:textSize="@dimen/item_title_recommend" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_text_margin_recommend"
                android:layout_marginLeft="@dimen/item_text_margin_recommend"
                android:layout_marginRight="@dimen/item_text_margin_recommend"
                android:layout_marginTop="@dimen/item_text_margin_recommend"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tv_bage_recommend_main_home"
                    android:padding="2dp"
                    android:text="小视频"
                    android:textColor="@color/item_streamer_badge_text_recommend"
                    android:textSize="@dimen/item_badge_recommend" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="你看我好不好吃"
                    android:textColor="@color/item_item_dest_text_recommend"
                    android:textSize="@dimen/item_desc_recommend" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_video_more" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>