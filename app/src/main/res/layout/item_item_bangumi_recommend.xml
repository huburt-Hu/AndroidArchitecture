<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="@dimen/card_view_radius_recommend"
        app:cardElevation="@dimen/card_view_elevation_recommend">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_text_margin_recommend"
                        android:layout_marginLeft="@dimen/item_text_margin_recommend"
                        android:drawableLeft="@mipmap/ic_upper_info_views"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        tools:text="12.1"
                        android:textColor="@color/item_item_av_info_text_recommend"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_favorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_text_margin_recommend"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/item_text_margin_recommend"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_upper_info_favorite"
                        android:gravity="center_vertical"
                        android:textColor="@color/item_item_av_info_text_recommend"
                        android:textSize="11sp"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_text_margin_recommend"
                android:layout_marginRight="@dimen/item_text_margin_recommend"
                android:layout_marginTop="@dimen/item_text_margin_recommend"
                android:maxLines="1"
                android:textColor="@color/item_title_text_recommend"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_last_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_text_margin_recommend"
                android:layout_marginLeft="@dimen/item_text_margin_recommend"
                android:layout_marginRight="@dimen/item_text_margin_recommend"
                android:maxLines="1"
                android:textColor="@color/item_item_dest_text_recommend"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_text_margin_recommend"
                    android:layout_marginLeft="@dimen/item_text_margin_recommend"
                    android:background="@drawable/shape_tv_bage_recommend_main_home"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/item_streamer_badge_text_recommend"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_video_more"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>