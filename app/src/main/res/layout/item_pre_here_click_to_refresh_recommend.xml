<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.huburt.app.widget.LQRRefreshButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:refresh_btn_borderRadius="25dp"
        app:refresh_btn_borderWidth="0dp"
        app:refresh_btn_iconSize="14dp"
        app:refresh_btn_text="刚刚看到这里，点击刷新"
        app:refresh_btn_textColor="@color/colorPrimary"
        app:refresh_btn_textSize="14sp"/>

</FrameLayout>